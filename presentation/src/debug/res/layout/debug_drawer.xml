<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/debug_drawer_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <FrameLayout
        android:id="@+id/debug_activity_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/debug_drawer_bg"
        android:layout_gravity="end"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Debug preferences"
            android:textColor="@color/debug_drawer_txt"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/debug_drawer_txt" />

        <Switch
            android:id="@+id/sw_mock_responses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/debug_drawer_txt"
            android:text="Mock responses"
            android:layout_margin="5dp"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>